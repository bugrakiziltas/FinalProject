@model Product

<form asp-controller="Product" asp-action="AddToCart" method="post" class="container mt-5">
    @* Hidden fields for backend *@
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="Name" />
    <input type="hidden" asp-for="Description" />
    <input type="hidden" asp-for="Price" />
    <input type="hidden" asp-for="ImageUrl" />

    <div class="row justify-content-center align-items-center">
        <div class="col-md-6 text-center">
            <div class="item-img mb-4">
                <img src="~/Images/@Model.ImageUrl"
                     alt="@Model.Name"
                     class="img-fluid rounded"
                     style="max-height: 350px; width: auto; object-fit: contain;" />
            </div>

            <div class="item-content">
                <h3 class="fw-bold">@Model.Name</h3>
                <p class="text-muted">@Model.Description</p>
                <p class="fs-4 text-primary">$@Model.Price</p>

                <button type="submit" class="btn btn-success px-4 mt-2">
                    <i class="bi bi-cart-plus"></i> Add to Cart
                </button>
            </div>
        </div>
    </div>
</form>
