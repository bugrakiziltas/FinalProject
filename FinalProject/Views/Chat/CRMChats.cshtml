@using FinalProject.Dtos.Chat
@model List<ChatViewModel>

<h2>Customer Chats</h2>

<table class="table">
    <thead>
        <tr>
            <th>Customer</th>
            <th>Product</th>
            <th>Last Message</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var chat in Model)
        {
            <tr>
                <td>@chat.UserName</td>
                <td>@chat.ProductName</td>
                <td>@chat.Created.ToString("g")</td>
                <td>
                    <a asp-controller="Chat" asp-action="ChatDetail" asp-route-userId="@chat.SenderId" asp-route-productId="@chat.ProductId"
                       class="btn btn-primary">View Chat</a>
                </td>
            </tr>
        }
    </tbody>
</table>
