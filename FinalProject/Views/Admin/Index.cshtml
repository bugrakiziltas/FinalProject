<div class="container my-4">
    <div class="d-flex justify-content-center gap-3">
        <a asp-controller="Admin" asp-action="CreateProduct"
           class="btn btn-primary text-center px-4 py-2 fw-bold shadow-sm">
            <i class="bi bi-plus-circle"></i> Click to Create Product
        </a>
    </div>
</div>
<div class="container mt-5">
    <div class="table-responsive">
        <table class="table table-striped table-hover shadow-sm">
            <thead class="table-dark">
                <tr>
                    <th style="width: 15%">Name</th>
                    <th style="width: 70%">Description</th>
                    <th style="width: 15%" class="text-center">Operations</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model)
                {
                    <tr>
                        <td class="align-middle">@product.Name</td>
                        <td class="align-middle">@product.Description</td>
                        <td class="text-center align-middle">
                            <div class="d-flex justify-content-center gap-2">
                                <a asp-controller="Admin" asp-action="UpdateProduct" asp-route-id="@product.Id"
                                   class="btn btn-warning btn-sm shadow-sm">
                                    <i class="bi bi-pencil"></i> Update
                                </a>
                                <form asp-controller="Admin" asp-action="DeleteProduct"  asp-route-id="@product.Id" method="post">
                                    <button type="submit" class="btn btn-danger btn-sm shadow-sm"
                                            onclick="return confirm('Are you sure?');">
                                        <i class="bi bi-trash"></i> Delete
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>