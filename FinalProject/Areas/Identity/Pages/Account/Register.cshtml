@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="register-container">
    <div class="register-card">
        <h1 class="register-title">@ViewData["Title"]</h1>
        <div class="row">
            <div class="col-md-12">
                <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <h2 class="subtitle">Create a new account.</h2>
                    <hr class="divider" />
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                    <div class="form-floating mb-4">
                        <input asp-for="Input.Email" class="form-control custom-input" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                        <label asp-for="Input.Email">Email</label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-4">
                        <input asp-for="Input.Password" class="form-control custom-input" autocomplete="new-password" aria-required="true" placeholder="password" />
                        <label asp-for="Input.Password">Password</label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-4">
                        <input asp-for="Input.ConfirmPassword" class="form-control custom-input" autocomplete="new-password" aria-required="true" placeholder="password" />
                        <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                    <div class="mb-4">
                        <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary register-button">Register</button>
                    </div>
                    <div class="login-link">
                        <p>
                            <a asp-area="Identity" asp-page="/Account/Login" asp-route-returnUrl="@Model.ReturnUrl">Already have an account? Log in here.</a>
                        </p>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    .register-container {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 80vh;
        padding: 20px;
    }

    .register-card {
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        padding: 30px;
        width: 100%;
        max-width: 500px;
    }

    .register-title {
        text-align: center;
        color: #333;
        font-weight: bold;
        margin-bottom: 20px;
    }

    .subtitle {
        font-size: 1.2rem;
        color: #555;
        text-align: center;
        margin-bottom: 15px;
    }

    .divider {
        border-top: 1px solid #eee;
        margin-bottom: 25px;
    }

    .custom-input {
        border: 1px solid #ddd;
        border-radius: 5px;
        transition: border-color 0.3s;
    }

        .custom-input:focus {
            border-color: #80bdff;
            box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
        }

    .register-button {
        background-color: #28a745;
        border: none;
        border-radius: 5px;
        padding: 12px;
        font-weight: 600;
        transition: background-color 0.3s;
    }

        .register-button:hover {
            background-color: #218838;
        }

    .login-link {
        text-align: center;
        margin-top: 15px;
    }

        .login-link a {
            color: #007bff;
            text-decoration: none;
            font-weight: 500;
            transition: color 0.3s;
        }

            .login-link a:hover {
                color: #0056b3;
                text-decoration: underline;
            }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
