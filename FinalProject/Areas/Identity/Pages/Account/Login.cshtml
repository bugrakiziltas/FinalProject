@page
@model LoginModel
@{
    ViewData["Title"] = "Log in";
}

<div class="login-container">
    <div class="login-card">
        <h1 class="login-title">@ViewData["Title"]</h1>
        <div class="row">
            <div class="col-md-12">
                <section>
                    <form id="account" method="post">
                        <h2 class="subtitle">Use a local account to log in.</h2>
                        <hr class="divider" />
                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                        <div class="form-floating mb-4">
                            <input asp-for="Input.Email" class="form-control custom-input" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                            <label asp-for="Input.Email" class="form-label">Email</label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-4">
                            <input asp-for="Input.Password" class="form-control custom-input" autocomplete="current-password" aria-required="true" placeholder="password" />
                            <label asp-for="Input.Password" class="form-label">Password</label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="mb-4">
                            <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary login-button">Log in</button>
                        </div>
                        <div class="register-link">
                            <p>
                                <a asp-area="Identity" asp-page="/Account/Register" asp-route-returnUrl="@Model.ReturnUrl">You do not have an account? Register here.</a>
                            </p>
                        </div>
                    </form>
                </section>
            </div>
        </div>
    </div>
</div>

<style>
    .login-container {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 80vh;
        padding: 20px;
    }

    .login-card {
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        padding: 30px;
        width: 100%;
        max-width: 500px;
    }

    .login-title {
        text-align: center;
        color: #333;
        font-weight: bold;
        margin-bottom: 20px;
    }

    .subtitle {
        font-size: 1.2rem;
        color: #555;
        text-align: center;
        margin-bottom: 15px;
    }

    .divider {
        border-top: 1px solid #eee;
        margin-bottom: 25px;
    }

    .custom-input {
        border: 1px solid #ddd;
        border-radius: 5px;
        transition: border-color 0.3s;
    }

        .custom-input:focus {
            border-color: #80bdff;
            box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
        }

    .login-button {
        background-color: #007bff;
        border: none;
        border-radius: 5px;
        padding: 12px;
        font-weight: 600;
        transition: background-color 0.3s;
    }

        .login-button:hover {
            background-color: #0069d9;
        }

    .register-link {
        text-align: center;
        margin-top: 15px;
    }

        .register-link a {
            color: #007bff;
            text-decoration: none;
            font-weight: 500;
            transition: color 0.3s;
        }

            .register-link a:hover {
                color: #0056b3;
                text-decoration: underline;
            }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}